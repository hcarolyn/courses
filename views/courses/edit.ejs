<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Course</h1>
    <div class="col-6 offset-3">
        <form action="/courses/<%=course._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="courseName">Course Name</label>
                <input class="form-control" type="text" id="courseName" name="course[courseName]"
                    value="<%=course.courseName %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="subject">Subject</label>
                <input class="form-control" type="text" id="subject" name="course[subject]"
                    value="<%=course.subject %>">
            </div>

            <div class="mb-3">
                <button class="btn btn-info">Update Course</button>
            </div>
        </form>
        <a href="/courses/<%= course._id%>">Back To Course</a>

    </div>
</div>